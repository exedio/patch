<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
	<info
			organisation="com.exedio"
			module="copepatch"
			revision="@BUILD_REVISION@"
			status="@BUILD_STATUS@">
		<license
				name="GNU Lesser General Public License, Version 2.1"
				url="https://opensource.org/licenses/lgpl-license.html" />
	</info>
	<configurations>
		<conf name="runtime" />
		<conf name="sources" />
		<conf name="changelog" />
		<conf name="build" extends="runtime" visibility="private" />
	</configurations>
	<publications>
		<artifact name="exedio-cope-patch" conf="runtime"   type="jar" ext="jar" />
		<artifact name="exedio-cope-patch" conf="sources"   type="src" ext="zip" />
		<artifact name="exedio-cope-patch" conf="changelog" type="log" ext="txt" />
	</publications>
	<dependencies>
		<dependency org="com.exedio" name="copeutil" rev="823" conf="runtime->runtime; build->runtime,sources,changelog" />
		<dependency org="com.exedio" name="cope" rev="9879" conf="runtime->runtime; build->hsqldb,instrument,sources,changelog">
			<exclude org="com.exedio" module="copeservletutil" />
			<exclude org="javax.servlet" module="javax.servlet-api"/>
		</dependency>
		<!-- build dependencies -->
		<dependency org="ch.qos.logback" name="logback-classic" rev="1.0.4" conf="build->default" />
		<dependency org="org.junit.jupiter"  name="junit-jupiter-api"      rev="5.3.2" conf="build->default,sources" />
		<dependency org="org.junit.jupiter"  name="junit-jupiter-engine"   rev="5.3.2" conf="build->default" />
		<dependency org="org.junit.platform" name="junit-platform-console" rev="1.3.2" conf="build->default" />
		<dependency org="org.apiguardian"    name="apiguardian-api"        rev="1.0.0" conf="build->default" />
		<dependency org="findbugs-x" name="findbugs" rev="3.0.0" conf="build->default" />
	</dependencies>
</ivy-module>
